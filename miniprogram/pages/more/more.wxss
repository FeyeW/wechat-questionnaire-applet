page {
  background-color: #f3f5f9;
}
.content {
  margin: 20rpx;
}
.content .content-header {
  margin-bottom: 30rpx;
}
.content .content-header image {
  width: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.content .content-header text {
  font-size: 32rpx;
  margin-left: 20rpx;
}
.content .content-buttom {
  position: relative;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  margin: 10rpx 0;
}
.content .content-buttom .button-left {
  display: flex;
  align-items: center;
}
.content .content-buttom .button-left image {
  width: 50rpx;
  margin-left: 20rpx;
}
.content .content-buttom .button-left text {
  line-height: 120rpx;
  margin-left: 20rpx;
}
.content .content-buttom .button-right {
  position: absolute;
  top: 40rpx;
  right: 20rpx;
  width: 50rpx;
}
